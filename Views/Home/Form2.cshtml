<form id="myForm" method="post" asp-controller="Home" asp-action="Index">
    <div class="form-group">
        <label>Student Name</label>
        <input type="text" class="form-control" id="stdName" name="stdName" placeholder="Enter Student Name" value="">
    </div>
    <div class="form-group">
        <label>Email address</label>
        <input type="email" class="form-control" id="stdEmail" name="stdEmail" placeholder="Enter Student Email" value="">
    </div>
    <div class="form-group">
        <label>Select Hobby</label>
        <select class="form-control" id="selectHobby" name="selectHobby">
            <option selected>Select Hobby</option>
            <option value="gaming">gaming</option>
            <option value="football">football</option>
            <option value="cricket">cricket</option>
            <option value="hockey">hockey</option>
            <option value="chess">chess</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit Form" />
    </div>
</form>

